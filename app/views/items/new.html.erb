<% provide(:title, "New Item") %>
<%= form_for @item do |f| %>
    <h3>Add Item</h3>
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :price %>
    <%= f.number_field :price, :class => 'text_field', :step => 0.01 %>
    
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
    
    <h3>Enter a description</h3>
    <%= f.label :desc %>
    <%= f.text_field :desc %>
    
    <%= f.submit 'Create Item' %>
<% end %>
    