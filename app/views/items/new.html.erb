<% provide(:title, "New Item") %>
<h1>Sell Item</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= render 'shared/item_error_messages' %>
        
        <%= form_for @item do |f| %>
        <h3>Add Item</h3>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :price %>
        <%= f.number_field :price, :class => 'text_field', :step => 0.01 %>
        <br>
        <%= f.label :type %>
        <%= select_tag(:type, options_for_select(%w(General Clothing Beauty))) %>
        <br>
        <%= f.label :quantity %>
        <%= f.number_field :quantity %>
        <br>        
        <h3>Enter a description</h3>
        <%= f.label :desc %>
        <%= f.text_field :desc %>
        <br>
        <%= f.label :category_id %>
        <%= select_tag(:category_id, options_for_select(@categories), 
            :prompt => "Select Category") %>
        
        <%= f.submit 'Create Item' %>
        <% end %>        
    </div>
</div>

    