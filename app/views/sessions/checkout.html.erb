<% provide(:title, "Checkout") %>
<h1>Checkout</h1>

<table class="table table-striped">
    <tr>
        <td>Item Seller</td>
        <td>Item Name</td>
        <td>Price</td>
        <td>Quantity</td>
    </tr>
    <% if session[:cart] %>
        <% session[:cart].each do |item_id, quantity| %>
        <% item = Item.find_by(id: item_id) %>
            <tr>
                <td>
                    <%= item.user.first_name %> <%= item.user.last_name %>
                </td>
                <td>
                    <%= item.name %>
                </td>
                <td>
                    <%= item.price %>
                </td>
                <td>
                    <%= quantity %>
                </td>
            </tr>
        <% end %>
    <% end %>
    <tr>
        <div class='price'>
            <%= render "sessions/cart_price" %>
        </div>
    </tr>
</table>

<%= link_to "Confirm Payment", purchase_path, class: "btn pull-right btn-primary center" %>