<% provide(:title, "Home") %>
<div class="center jumbotron" style="margin-top:15px">
    <h3 style="margin-bottom:30px">
        Welcome to your favorite marketplace!</h3>
        <% if current_user == nil%>
             <%= link_to "Sign up now!", new_user_path, class: "btn btn-lg btn-primary" %>
        <%end%>
   
</div>
<body>
    <table WIDTH="50%" BORDER="2" ALIGN="CENTER" CELLSPACING="40">
        <tr ALIGN="Center">
            <td>Owner</td>
            <td>Item Name</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Description</td>
            <td> </td>
        </tr>
        <% Item.all.each do |item| %>
            <tr ALIGN="Center">
                <td>
                    <% if item.user %>
                        <%= item.user.first_name %> <%= item.user.last_name %>
                    <% end %>
                </td>
                <td>
                    <%= item.name %>
                </td>
                <td>
                    <%= item.price %>
                </td>
                <td>
                    <%= item.quantity %>
                </td>
                <td>
                    <%= item.desc %>
                </td>
                <td>
                    <%= button_to "Add to Cart", cart_path(item) %>
                </td>
            </tr>
        <% end %>
    </table>
</body>
