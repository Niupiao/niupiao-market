<% if @item.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert_danger">
            The form contains <%= pluralize(@item.errors.count, "error") %>
        </div>
        <u1>
            <% @item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </u1>
    </div>
<% end %>