<%= form_tag(pay_driver_path, :method => "get", class: "navbar-form center") do %>
  <div class="input-append">
    
    <%= text_field_tag :driver, params[:driver], class: "span2 center",
                      placeholder: "ID"%>
    <%= text_field_tag :amount, params[:amount], class: "span2 center", 
                       placeholder: "Amount"%>
    <button class="btn" type="submit">Update</button>
  </div>
<% end %>